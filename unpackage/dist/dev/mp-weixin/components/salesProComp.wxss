
.sales-product-content{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	margin-top: 20rpx;
	margin-left: 20rpx;
}
.sales-product-right{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	margin-left: 20rpx;
}
.sales-product-image{
	width:200rpx;
}
