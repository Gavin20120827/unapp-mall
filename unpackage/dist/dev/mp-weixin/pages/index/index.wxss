/* 轮播图开始 */
.swiper-block{
	width: 100%;
	height: 440rpx;
}
.swiper-image{
	width: 100%;
}
/* 轮播图结束 */
/* 菜单开始 */
.menu-block{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
	margin-top: 20rpx;
	margin-bottom: 15rpx; 
	padding-top: 10rpx;
}
.menu-content{
	width: 25%;
	padding: 5px;
	box-sizing: border-box;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
}
.menu-image{
	width: 66%;
	-webkit-align-self: center;
	        align-self: center;
}
.menu-text{
	-webkit-align-self: center;
	        align-self: center;
}
/* 菜单结束 */
/* 资讯开始 */
.news-block{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	margin-top: 5rpx;
	padding-top: 10rpx;
}
.news-image{
	width: 44rpx;
}
.news-image-right{
	width: 26rpx;
	padding-right: 20rpx;
}
.news-title{
	-webkit-box-flex: 1;
	-webkit-flex-grow: 1;
	        flex-grow: 1;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
/* 资讯结束 */
/* 最新产品开始 */
.Newest-product-block{
	margin-top: 20rpx;
}
/* 最新产品内容开始 */
.Newest-product-content-block{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
}
.Newest-product-content{
	width: 50%;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	padding: 5px;
	box-sizing: border-box;
}
.Newest-product-image{
	width: 100%;
	border: 1px solid #fcfafa;
	border-radius: 5px;
	box-shadow: 0px 2px 2px gainsboro;
	padding: 5px;
	box-sizing: border-box;
}
.Newest-product-title{
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
	font-size: 12px;
	padding: 3px;
}
.Newest-price-text{
	font-size: 10px;
	color: gray;
}
.Newest-price-num{
	color: red;
	padding: 3px;
}
/* 最新产品内容结束 */
