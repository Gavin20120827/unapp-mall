/* 资讯开始 */
.news-block{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	margin-top: 5rpx;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	padding-top: 10rpx;
}
.news-content-left{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.news-content{
	margin-left: 10rpx;
}
.news-image{
	width: 50rpx;
}
.news-image-right{
	width: 40rpx;
}
.news-content-right{
	padding-right: 10rpx;
}
.news-title{
	width: 400rpx;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
/* 资讯结束 */
